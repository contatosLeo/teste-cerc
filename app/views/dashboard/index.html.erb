</nav>

<div class="container-fluid">
  <div class="row">
    <div class="col-sm-12 col-md-10 col-md-offset-1 main">

      <% if params[:dog].present? %>
        <h2 class="sub-header">Buscando por: <%= params[:dog] %></h2>
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Nome da raça</th>
                <th>Expectativa de vida mínima</th>
                <th>Expectativa de vida maxima</th>
                <th>País de origem</th>
              </tr>
            </thead>
            <tbody>
              <% @dogs.each do |dog| %>
              <tr>
                <td><%= dog[:nome_da_raca] %></td>
                <td><%= dog[:expectativa_de_vida_minima] %></td>
                <td><%= dog[:expectativa_de_vida_maxima] %></td>
                <td><%= dog[:pais_de_origem] %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <h2>Efetue a Busca pelo cão desejado</h2>
      <% end %>
    </div>
  </div>
</div>
